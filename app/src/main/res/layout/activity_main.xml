<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <EditText
        android:background="@color/white"
        android:textColorHint="@color/black"
        android:id="@+id/shirina"
        android:layout_width="400dp"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="88dp"
        android:textColor="@color/black"
        android:hint=" ширина"
        android:paddingStart="22dp"

        />
    <EditText
        android:id="@+id/dolgota"
        android:layout_width="400dp"
        android:background="@color/white"
        android:textColorHint="@color/black"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shirina"
        android:layout_margin="42dp"
        android:hint="долгота"
        android:textColor="@color/black"
        android:paddingStart="22dp"
        />
    <Button
        android:id="@+id/btn_tst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dolgota"
        android:layout_margin="42dp"
        android:backgroundTint="#2196F3"
        android:text="посмотреть место "
    />

</androidx.constraintlayout.widget.ConstraintLayout>